  <style>
    .seccion-historia {
      background-color: #fffaf7;
      padding: 100px 20px;
      font-family: 'Georgia', serif;
    }
  
    .historia-contenido {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 60px;
      max-width: 1200px;
      margin: 0 auto;
      flex-wrap: wrap;
    }
  
    .historia-imagenes {
      flex: 1 1 400px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
  
    .historia-imagenes img {
      width: 100%;
      border-radius: 15px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
      object-fit: cover;
    }
  
    .historia-texto {
      flex: 1 1 500px;
    }
  
    .historia-texto h2 {
      font-size: 2.8rem;
      color: #3b2e25;
      margin-bottom: 25px;
