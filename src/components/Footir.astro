      color: #f3efea;
    }

    .footer-info h4,
    .footer-redes p {
      font-weight: bold;
      margin-bottom: 10px;
      color: #f8e4c1;
    }

    .footer-info p,
    .footer-redes a {
      margin: 4px 0;
      font-size: 0.95rem;
      color: #e0d3c2;
    }

    .footer-redes .redes-iconos {
      display: flex;
      gap: 15px;
      align-items: center;
    }

    .icono-red {
      width: 40px;
      height: 40px;
      transition: transform 0.3s ease;
    }

    .icono-red:hover {
      transform: scale(1.15);
    }

    .footer-bottom {
      text-align: center;
      font-size: 0.9rem;
      color: #bfb2a5;
      margin-top: 40px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      padding-top: 20px;
    }

